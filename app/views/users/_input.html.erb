<%= form_with model: user do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% user.errors.full_messages_for(:name).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  </div>

  <div>
    <p>
    <%= form.label :age %><br>
    <%= form.text_field :age %>
    <% user.errors.full_messages_for(:age).each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
    </p>
  </div>


  <div>
    <p>Gender
      <br>
      <div class="radio">
      <%= form.radio_button :gender, 'Male' %> 
      <%= form.label :gender,'Male', :value => 'Male' %>
      <%= form.radio_button :gender, 'Female' %>
      <%= form.label :gender,'Female', :value => 'Female' %>
      <%= form.radio_button :gender, 'Others' %>
      <%= form.label :gender,'Others', :value => 'Others' %><br />
      <% user.errors.full_messages_for(:gender).each do |message| %>
      <div class="radioError"><%= message %></div>
      </div>
    <% end %>
  </p>
  </div>

  <div>
    <%= form.submit %>
  </div>
  <div>
</div>
<% end %>
